@using Themenschaedel.Shared.Props
@using Humanizer
@inherits Themenschaedel.Components.EpisodeCollection

<div class="videos">
    @foreach (Episode item in Episodes)
    {
    <div class="video anim" style="@cssDelayString">
        <div class="video-time">@(item.duration/60)m</div>
        <div class="video-wrapper">
            <video muted="">
                <source src="" type="video/mp4">
            </video>
            <div class="author-img__wrapper video-author">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" class="feather feather-check">
                    <path d="M20 6L9 17l-5-5"></path>
                </svg>
                <img class="author-img" src="">
            </div>
        </div>
        <div class="video-by">Andy William</div>
        <div class="video-name">@((MarkupString)item.title)</div>
        <div class="video-view">@item.published_at.Humanize().ToString()</div>
    </div>
    }
    
    @if (StopLoading)
    {
        <div>
            <h4>End Of List</h4>
        </div>
    }
    <div id="list-end" class="mt-5 mb-5 p-5">
        <p></p>
        @if (IsLoading)
        {
            <div class="d-flex justify-content-center">
                <div class="spinner-grow" style="width: 3rem; height: 3rem;" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
        }

